  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 card-border">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <% if @dose.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @dose.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <%= f.input :description %>
      <%= f.input :ingredient_id, collection: @ingredients %>
      <%= f.button :submit, class:"btn btn-success mybtn" %>
      <% end %>
    </div>
  </div>
