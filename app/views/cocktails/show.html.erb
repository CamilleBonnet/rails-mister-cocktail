<div class="container">
  <div class="row">
    <h1>Here the composition for a:</h1>
    <div class="col-xs-4 col-xs-offset-4">
      <%= render 'shared/card', cocktail: @cocktail %>
    </div>
    <div class="col-xs-6 col-xs-offset-3">
      <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> <% unless dose.ingredient.nil? %> of <%= dose.ingredient.name %> <% end %>
        <br>
        <%= link_to "Delete dose", dose_path(dose), method: :delete %>
      </li>
      <% end %>
    </div>
  </div>
  <%# link_to "Add a new dose for " + @cocktail.name, new_cocktail_dose_path(@cocktail), class:"btn btn-success" %>
  <%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete, class:"btn btn-danger mybtn btn-margin-top" %>
  <%= render 'doses/form' %>
  <%= link_to "Back to cocktails", cocktails_path, class:"btn btn-primary mybtn btn-margin-top" %>
</div>
