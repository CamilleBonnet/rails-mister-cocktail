<div class="container">
  <div class="row">
    <h1>Here the composition for a <%= @cocktail.name %></h1>
    <div class="col-xs-6 col-xs-offset-3">
      <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> of <%= dose.ingredient.name %>
        <br>
        <%= link_to "Delete dose", dose_path(dose), method: :delete %>
      </li>
      <% end %>
    </div>
  </div>
  <%= link_to "Back to cocktails", cocktails_path, class:"btn btn-success mybtn" %>
  <%# link_to "Add a new dose for " + @cocktail.name, new_cocktail_dose_path(@cocktail), class:"btn btn-success" %>
  <%= render 'doses/form' %>
</div>
