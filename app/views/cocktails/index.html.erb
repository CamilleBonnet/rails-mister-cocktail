<div class="container">
  <div class="row">
    <h1 class="text-center">MLK's BAR</h1>
    <h1 class="text-center">All cocktails we can offer:</h1>
  </div>
  <%= render 'cocktails/form' %>
  <div class="row cards-margin">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-6 col-sm-4">
      <%= link_to cocktail_path(cocktail) do %>
        <% render 'shared/card', cocktail: cocktail %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
